{
  "exclude": ["node_modules", "dist", "prisma/generated"],
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@mailer/*": ["src/mailer/*"],
      "@aws/*": ["src/aws/*"],
      "@article/*": ["src/article/*"],
      "@auth/*": ["src/auth/*"],
      "@config/*": ["src/config/*"],
      "@db/*": ["src/db/*"],
      "@review/*": ["src/review/*"],
      "@cart/*": ["src/cart/*"],
      "@user/*": ["src/user/*"],
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["src/shared/*"],
      "@app/*": ["src/*"]
    }
  }
}
